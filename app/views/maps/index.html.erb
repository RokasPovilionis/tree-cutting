        map.data.setStyle(function(feature) {
        var color = "green";
        return {
          fillColor: color,
          strokeWeight: 1
        }
      });
      }
      var color = "green";

    </script>

    <script
      async
      defer
 src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBKgjgdGIMcQh9jaXKxFGJFWVGfmAlFQ_Y&callback=initMap">
