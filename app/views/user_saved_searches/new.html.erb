<div class="container" id="sign-up-form">
  <div class="row justify-content-center">
    <div class="col-sm-offset-4 col-sm-8 mb-4">
      <h3>Pridėkite paieškos pavadinimą</h3>
      <%= bootstrap_form_for(@user_saved_search, :url => user_saved_searches_path) do |f| %>
        <%= f.text_field :search_name, label: 'Paieškos pavadinimas', placeholder: 'Paieškos pavadinimas', class: 'form-control' %>
        <%= f.submit 'Sukurti', class: 'btn btn-success sign-up-button' %>
      <% end %>
    </div>
  </div>
</div>
